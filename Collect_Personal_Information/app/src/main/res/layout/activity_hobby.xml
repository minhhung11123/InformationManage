<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:context=".HobbyActivity"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2B99F1"
            android:textColor="#FFFFFF"
            android:text="@string/textView7"
            android:textAlignment="center"
            android:textSize="30sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/textView8"
            android:textSize="20sp"
            android:layout_marginStart="30dp" />

        <Spinner
            android:id="@+id/spnMusic"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/txtMusic1"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/textView9"
            android:textSize="20sp"
            android:layout_marginStart="30dp" />

        <Spinner
            android:id="@+id/spnSport"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/txtSport1"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/textView10"
            android:textSize="20sp"
            android:layout_marginStart="30dp" />

        <Spinner
            android:id="@+id/spnMovie"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/txtMovie1"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/textView11"
            android:textSize="20sp"
            android:layout_marginStart="30dp" />

        <Spinner
            android:id="@+id/spnPet"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/txtPet1"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button"
            android:textColor="#FFFFFF"
            android:text="@string/btnConfirm"
            android:textSize="20sp"
            android:layout_marginStart="200dp" />

    </LinearLayout>
</ScrollView>